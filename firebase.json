{
  "hosting": {
    "site": "kamenko",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/push-sw.js",
        "headers": [
          {
            "key": "Service-Worker-Allowed",
            "value": "/push-handler/"
          }
        ]
      },
      {
        "source": "**/*.@(js|css|svg|png|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions"
  }
}
